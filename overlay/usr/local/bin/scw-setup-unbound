#!/usr/bin/env bash

set -e

. scw-ovpn-lib


cat <<EOF > /etc/unbound/unbound.conf.d/ovpn.conf
# generated by $0

server:
  interface: 0.0.0.0
  interface: ::0
$(for net in ${ipv4_net} ${ipv6_net}; do
  echo "  access-control: ${net} allow"
done)

forward-zone:
  name: "."
$(for dns in ${ipv4_dns_servers}; do
  echo "  forward-addr: ${dns}"
done)
EOF
