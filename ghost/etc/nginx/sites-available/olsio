upstream ghost_upstream {
  server 127.0.0.1:2368;
  keepalive 64;
}

server {

  listen 443 ssl;
  listen [::]:443 ssl ipv6only=on;

  server_name donottest.me;

  ssl_certificate /etc/letsencrypt/live/donottest.me/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/donottest.me/privkey.pem;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_session_cache shared:SSL:10m;
  ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
  add_header Strict-Transport-Security "max-age=63072000; includeSubdomains; preload";
  ssl_dhparam /etc/letsencrypt/dh/dhparam.pem;

  location / {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header Host $host;
    proxy_pass http://ghost_upstream;
  }

  location /content/images {
    alias /var/www/content/images;
    access_log off;
    expires max;
  }

  location /assets {
    alias /var/www/themes/uno-master/assets;
    access_log off;
    expires max;
  }

  location /public {
    alias /var/www/core/built/public;
    access_log off;
    expires max;
  }

  location /ghost/scripts {
    alias /var/www/core/built/scripts;
    access_log off;
    expires max;
  }
}

server {
  listen 80 default_server;
  listen [::]:80 default_server ipv6only=on;

  server_name donottest.me;

  location '/.well-known/acme-challenge' {
    default_type "text/plain";
    root /tmp/letsencrypt-auto;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}
